{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchOptions": {
      "watchDirectory": "dynamicPriorityPolling",
      "usePolling": true,
      "interval": 500,
      "excludeDirectories": ["temp", "**/temp", "node_modules"]
    }
  }
}
